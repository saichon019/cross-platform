<UI>:
    id:scr_manager
    Scr1:
    Scr2:
####################
<Scr2>:
    name:"Scr2"
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: txt_number
        BoxLayout:
            ToggleButton:
                text: 'base2'
                group: 'convert_mode'
                on_press: root.convert(*args)
            ToggleButton:
                text: 'base8'
                group: 'convert_mode'
                on_press: root.convert(*args)
            ToggleButton:
                text: 'base16'
                group: 'convert_mode'
                on_press: root.convert(*args)
       
        Label:      
            id:lbl_output
            text:"lbl_output"
            color: 'red'
########################
<Scr1>:
    name:'Scr1'
    canvas.before: 
        Rectangle: 
            source: "1.png"
            size: root.width, root.height
            pos: self.pos
    Button:
        text:"แปลงเลขฐาน"
        font_name:"tahoma" 
        color: 'yellow'
        on_press:app.root.current='Scr2'
        pos_hint:{'center_x' : 0.5,'center_y':0.5} #ปรับขยับชิดซ้ายขวา กลาง เรื่อยๆ 
        size_hint:0.25,0.10

